<% if @track && @track.errors.any? %>
  <div>
    <strong>Oops! Something went wrong! Please check your inputs:</strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 

<form method="post" action="/tracks">
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track && @track.author %>"placeholder="Artist">
  </div>
  <div>
    <label>Song Title:</label>
    <input type="text" name="song_title" value="<%= @track && @track.song_title %>"placeholder="Your favourite song">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @track && @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>